<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_network_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_network_retry_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_network" />

    <TextView
        android:id="@+id/state_hint_content"
        style="@style/StateLayout.Content"
        android:layout_below="@id/no_network_retry_view"
        android:text="@string/no_network_view_hint" />
</RelativeLayout>